<header class="p-4 text-white flex justify-between items-center text-center">
  <h1 class="text-2xl font-bold text-black">My Seminars</h1>
  <a href="/dashboard/seminars/new" class="bg-blue-500 p-2 rounded-md hover:bg-green-600"
    >Create New</a
  >
</header>

<main class="container mx-auto mt-8 p-4">
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% seminars.forEach(seminar => { %>
    <a href="/dashboard/seminars/<%= seminar.id %>" class="bg-white rounded-lg shadow-md p-6">
      <h2 class="text-xl font-semibold text-green-600"><%= seminar.title %></h2>

      <p class="text-gray-600 mt-2 overflow-hidden overflow-ellipsis max-h-12">
        <%= seminar.description.split('\n').slice(0, 3).join(' ') %>
      </p>
      <p class="text-gray-500 mt-4 text-sm">
        Created on: <%= new Date(seminar.createdAt).toLocaleDateString() %>
      </p>
    </a>
    <% }); %>
  </div>
</main>
